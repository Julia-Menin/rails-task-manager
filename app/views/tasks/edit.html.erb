<h1>Edit your task</h1>

<div>
  <%= form_with model: @task do |f| %>
  <div>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
  <div>
  <%= f.label :details %>
  <%= f.text_area :details %>
  </div>
  <div>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  </div>
  <%= f.submit %>
  <% end %>
</div>

<div>
<%= link_to "Back to main page", tasks_path %>
</div>
